<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:parentTag="com.natuan.customview.ActionBarView">
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/left_btn"
            tools:src="@drawable/ic_action_bar_back"
            android:scaleType="center"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentLeft="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/title_tv"
            android:layout_toRightOf="@+id/left_btn"
            android:layout_toLeftOf="@+id/right_btn"
            tools:text="Tài khoản"
            android:textSize="@dimen/font_20"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/right_btn"
            android:layout_alignParentRight="true"
            tools:src="@drawable/ic_action_bar_save"
            android:scaleType="center"
            android:background="?attr/selectableItemBackground"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"/>
</merge>